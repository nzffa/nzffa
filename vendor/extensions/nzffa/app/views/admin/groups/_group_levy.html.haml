- if @group.has_annual_levy?
  %p.group_levy
    = label_tag :group_annual_levy, "Levy"
    = text_field :group, :annual_levy, :maxlength => 100, :class => "textbox", :value => @group.annual_levy
  %p.account_codes
    = label_tag :group_account_codes, "Xero account codes"
    = text_field :group, :account_codes, :class => "textbox", :value => @group.account_codes
    %span.note
      Separated by commas, in this order: refund account, advance subscription account, subscription account
      %br
      E.g. "2-1010,2-3010,4-1010"
